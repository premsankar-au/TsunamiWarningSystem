function getCircle() {
        var circle = {
		path: google.maps.SymbolPath.CIRCLE,
		fillColor: 'green',
		fillOpacity: 1,
		scale: 3,
		strokeColor: 'green',
		strokeWeight: 2,
		strokeOpacity: 0.6
	};
        return circle;
      }


$(document).ready(function() {
   
	
       	var myLatlng = new google.maps.LatLng(9.092732,76.494087); //center to vallikavu bustop
	var mapOptions = {
		zoom: 8,
		center: myLatlng,
		mapTypeId: google.maps.MapTypeId.ROADMAP,       
		panControl: true,
		zoomControl: true,
		mapTypeControl: true,
		scaleControl: true,
		streetViewControl: true,
		overviewMapControl: true,
		opacity: 0.2,
		disableDefaultUI: false,
		draggable: true,
		scrollwheel: true
	};
	map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);
	
});
